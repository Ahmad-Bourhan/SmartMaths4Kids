<div class="container my-5">
  <!-- Title and introduction -->
  <div class="text-center mb-4">
    <h1 class="text-primary">ğŸ‰ Quiz Results</h1>
    <p class="lead">Thank you for completing the quiz!</p>
  </div>

  <!-- Display total score -->
  <div class="alert alert-success text-center">
    <h3>ğŸ† Total Score: <strong><%= @total_score %> / <%= @total_possible_score %></strong> points</h3>
  </div>

  <% if @results.present? %>
    <!-- Summary table title -->
    <h4 class="mt-4 mb-3">ğŸ“Š Summary of Your Answers:</h4>

    <!-- Table showing all quiz answers -->
    <table class="table table-bordered table-hover shadow-sm">
      <thead class="table-primary">
        <tr>
          <th>#</th>
          <th>Question</th>
          <th>Your Answer</th>
          <th>Correct Answer</th>
          <th>Result</th>
        </tr>
      </thead>
      <tbody>
        <% @results.each_with_index do |result, index| %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= result["question_text"] %></td>
            <td><%= result["user_answer"].presence || "No Answer" %></td>
            <td><%= result["correct_answer"] %></td>
            <td>
              <% if result["is_correct"] %>
                <span class="text-success fw-bold">âœ… Correct</span>
              <% else %>
                <span class="text-danger fw-bold">âŒ Incorrect</span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p class="alert alert-warning text-center">âš ï¸ No results found!</p>
  <% end %>

  <!-- Action buttons -->
  <div class="text-center mt-5 d-flex flex-wrap justify-content-center gap-3">
    <%= link_to "ğŸ  Back to Home", root_path, class: "btn btn-primary btn-lg px-4" %>
    <%= link_to "ğŸ” Try Again", quiz_path, class: "btn btn-warning btn-lg px-4" %>
    <%= button_to "ğŸ–¨ï¸ Print Results", "#", class: "btn btn-secondary btn-lg px-4", onclick: "window.print(); return false;" %>
    <%= link_to "ğŸ“Š View Chart", "#chart-section", class: "btn btn-info btn-lg px-4" %>
    <%= link_to "ğŸ“ Download Certificate", quiz_certificate_path(score: @total_score), class: "btn btn-success btn-lg px-4" %>
  </div>

  <!-- Chart section -->
  <div id="chart-section" class="mt-5 text-center">
    <h4 class="mt-5">ğŸ“Š Correct vs Incorrect Answers</h4>
    <%= pie_chart [
      ["Correct", @results.count { |r| r["is_correct"] }],
      ["Incorrect", @results.count { |r| !r["is_correct"] }]
    ] %>
  </div>
</div>
