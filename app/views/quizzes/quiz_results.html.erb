<h1>📊 Quiz Results</h1>

<p><strong>Total Score:</strong> <%= @total_score %> points</p>

<% if @results.any? %>
  <table class="table table-bordered mt-4">
    <thead class="table-light">
      <tr>
        <th>Question</th>
        <th>Your Answer</th>
        <th>Correct Answer</th>
        <th>Status</th>
      </tr>
    </thead>
    <tbody>
      <% @results.each do |result| %>
        <tr class="<%= result[:is_correct] ? 'table-success' : 'table-danger' %>">
          <td><%= result[:question_text] %></td>
          <td><%= result[:user_answer] %></td>
          <td><%= result[:correct_answer] %></td>
          <td><%= result[:is_correct] ? '✅ Correct' : '❌ Incorrect' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No results to display.</p>
<% end %>

<div class="mt-4">
  <%= link_to '🔙 Back to Levels', quizzes_path, class: "btn btn-primary" %>
</div>
