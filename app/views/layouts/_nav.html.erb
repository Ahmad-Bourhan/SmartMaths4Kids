<%= link_to "🏠 Home", root_path %> &nbsp;

<% if user_signed_in? && current_user.admin? %>
  <%= link_to "📋 All Questions", questions_path %> &nbsp;
<% end %>

<%= link_to "🧠 Quiz", quiz_path %> &nbsp;

<% if user_signed_in? %>
  <% if current_user.profile.present? %>
    <span>👋 Hello, <%= current_user.profile.first_name %>!</span> &nbsp;
  <% else %>
    <span>👋 Hello, <%= current_user.email %>!</span> &nbsp;
  <% end %>

  <%= link_to "👤 Profiles", profiles_path %> &nbsp;
  <%= link_to "📘 My Results", scores_path %> &nbsp;
  <%= button_to "🚪 Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-link p-0" %>
<% else %>
  <%= link_to "🔐 Sign In", new_user_session_path %> &nbsp;
  <%= link_to "🆕 Sign Up", new_user_registration_path %> &nbsp;
<% end %>
