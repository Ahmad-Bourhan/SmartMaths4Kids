<div id="<%= dom_id question %>" class="card shadow-sm mb-4">
  <div class="card-header bg-primary text-white">
    <h5 class="mb-0">🧠 Question Details</h5>
  </div>

  <div class="card-body">
    <p>
      <strong>📝 Question Text:</strong><br>
      <%= question.question_text %>
    </p>

    <p>
      <strong>🎯 Difficulty Level:</strong><br>
      <% level_label, level_color = case question.difficulty_level
        when 1 then ["Easy", "success"]
        when 2 then ["Medium", "warning"]
        when 3 then ["Hard", "danger"]
        else ["Unknown", "secondary"]
      end %>
      <span class="badge bg-<%= level_color %>"><%= level_label %></span>
    </p>

    <p>
      <strong>✅ Correct Answer:</strong><br>
      <%= question.correct_answer %>
    </p>

    <p>
      <strong>🏅 Mark:</strong><br>
      <%= question.mark %>
    </p>
  </div>

  <div class="card-footer text-end">
    <%= link_to '✏️ Edit', edit_question_path(question), class: 'btn btn-outline-primary me-2' %>
    <%= link_to '🔙 Back to List', questions_path, class: 'btn btn-secondary' %>
  </div>
</div>
