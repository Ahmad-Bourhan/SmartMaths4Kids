<%= form_with(model: question, local: true, class: "needs-validation") do |form| %>
  <% if question.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(question.errors.count, "error") %> prevented this question from being saved:</h5>
      <ul>
        <% question.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :question_text, "📝 Question Text", class: "form-label" %>
    <%= form.text_area :question_text, rows: 3, class: "form-control", placeholder: "Enter the question..." %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty_level, "⚙️ Difficulty Level", class: "form-label" %>
    <%= form.number_field :difficulty_level, in: 1..3, class: "form-control", placeholder: "1 (easy) to 3 (hard)" %>
  </div>

  <div class="mb-3">
    <%= form.label :correct_answer, "✅ Correct Answer", class: "form-label" %>
    <%= form.text_field :correct_answer, class: "form-control", placeholder: "e.g. 42" %>
  </div>

  <div class="mb-4">
    <%= form.label :mark, "🏅 Mark", class: "form-label" %>
    <%= form.select :mark, (1..5).to_a, {}, { class: "form-select" } %>
  </div>

  <%= form.submit "💾 Save Question", class: "btn btn-success" %>
<% end %>
